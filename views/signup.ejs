<%- include('./partials/header') %>
<style>
    h1{
        color: rgb(16, 36, 61);
    }
</style>
    <main class="w-full h-screen">
        <div class="container drop-shadow-md flex justify-center items-center h-screen m-auto">
            <div class="login rounded-lg p-3 bg-gray-900 text-zinc-100 w-1/4 h-96">
                <div class="login-heading m-2">
                    <h2 class="m-3">Sign Up</h2>
                    <form action="/user/signup" method="post">
                        <input class="bg-gray-800 block w-full px-3 py-2 border-[.5px] rounded-md mb-3 border-zinc-700"
                            type="text" placeholder="Full Name" name="fullname">
                        <input class="bg-gray-800 block w-full px-3 py-2 border-[.5px] rounded-md mb-3 border-zinc-700"
                            type="email" placeholder="Email" name="email">
                        <input class="bg-gray-800 block w-full px-3 py-2 border-[.5px] rounded-md mb-3 border-zinc-700"
                            type="password" placeholder="Password" name="password">
                        <input class="px-4 rounded-full py-2 bg-blue-500 text-white" type="submit"
                            value="Create an Account">
                    </form>
                    <a href="/user/signin" class="rounded-full py-2 px-5 m-5 bg-gray-900 text-zinc-100">Login</a>
                </div>
            </div>
        </div>
    </main>

<%- include('./partials/footer') %>