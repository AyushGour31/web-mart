<%- include('./partials/header') %>

    <main class="w-full h-screen">
        <div class="container drop-shadow-md flex justify-center items-center h-screen m-auto">
            <div class="signup rounded-lg p-3 bg-gray-100 w-1/4 h-96">
                <div class="signup-heading m-2">
                    <h2 class="m-3">Signup</h2>
                    <form autocomplete="off" action="/user/signin" method="post">
                        <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                            type="email" placeholder="Email" name="email">
                        <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                            type="password" placeholder="Password" name="password">
                        <input class="px-4 block rounded-full py-2 mt-2 bg-blue-500 text-white" type="submit"
                            value="Login">
                    </form>
                    <a href="/user/signup" class="rounded-full py-2 px-5 m-5 bg-gray-900 text-zinc-100">Signup</a>
                </div>
            </div>
        </div>
    </main>

<%- include('./partials/footer') %>